@model IList<Sale>  
    
<div class="row">
    @if (Model.Count == 0)
      {
        <div class="col-12">
          <p class="lead">Скидок и акций не найдено. Попробуйте изменить параметры фильтра.</p>
        </div>
      }
      @foreach (var sale in Model)
      {
      <div class="col-6 mb-3">
        <div class="card-img bg-faded">
          <img src='@sale.ImgUrl' alt="my image"  style="max-width: 100%; max-height: 100%;"/>
        </div>
        <div class="card-block">
          <h6 class="card-subtitle">@sale.Title</h6>
          <p class="text-muted">@sale.Description</p>
          <hr>
          <a href="#">Подробнее</a>
        </div>
      </div>
      }
</div>