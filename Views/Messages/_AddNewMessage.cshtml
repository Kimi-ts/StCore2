@model AddNewMessageViewModel

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Messages" asp-action="PostMessage">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MessageText"></label>
                <input asp-for="MessageText" class="form-control" />
                <span asp-validation-for="MessageText" class="text-danger"></span>

                <input name="AuthorId" type="hidden" value="@Model.AuthorId" />
                <input name="ChatOwnerId" type="hidden" value="@Model.ChatOwnerId" />
            </div>
            <button type="submit" class="btn btn-default">Send</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}